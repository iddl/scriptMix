{
  "manifest_version": 2,

  "name": "One-click Kittens",
  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",

  "background": {
    "page": "background.html"
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "images/good.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}